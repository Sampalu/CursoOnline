@model CursoOnline.Dominio.Cursos.CursoDTO
@{
    ViewData["Title"] = "Cursos";
}

<div id="pad-wrapper">
    <div class="row">
        <div class="col-md-12">
            <a href="/Cursos" class="btn btn-voltar"></a>
        </div>
    </div>
    <div class="row header">
        <div>
            <div class="col-md-1">
                <h3>Cursos</h3>
            </div>
        </div>
    </div>
    <div class="row form-wrapper">
        <div class="col-md-12">
            <form id="form" class="form-horizontal" asp-action="Salvar" asp-controller="Curso" asp-antiforgery="false"
                data-ajax="true" data-ajax-method="POST" data-ajax-failure="formQuandoFalha" data-ajax-success="window-location = '/Curso'">
                <div class="form-group">
                    <label class="col-md-2 control-label">Nome</label>
                    <div class="col-md-8">
                        <input type="text" class="form-control" asp-for="Nome" data-val="false" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Descrição</label>
                    <div class="col-md-8">
                        <input type="text" class="form-control" asp-for="Descricao" data-val="false" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Carga Horária</label>
                    <div class="col-md-2">
                        <input type="text" class="form-control" asp-for="CargaHoraria" data-val="false" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Público</label>
                    <div class="col-md-2">
                        <select class="form-control" asp-for="PublicoAlvo">
                            <option value="Estudante">Estudante</option>
                            <option value="Universitario">Universitário</option>
                            <option value="Empregado">Empregado</option>
                            <option value="Empreendedor">Empreendedor</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Valor</label>
                    <div class="col-md-2">
                        <input class="form-control" asp-for="Valor" data-val="false" />
                        <span asp-validation-for="Valor" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-8">
                        <button class="btn btn-success">Salvar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts { 
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/js/excecaoDeDominio.js"></script>
}